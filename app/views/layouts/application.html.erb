<!DOCTYPE html>
<html>
<head>
  <title>Ada</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    logged in as
    <%= current_user.email %>
    <div id="userSecret" style="display:none"><%= current_user.authentication_token %></div>
    <%= link_to 'logout', destroy_user_session_url, :method => :delete %>
  <% else %>
    <%= link_to 'login', new_user_session_url %>
    |
    <%= link_to 'register', new_user_registration_url %>
  <% end %>

<%= yield %>

</body>
</html>
