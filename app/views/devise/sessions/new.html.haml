!!!
%html{:lang => "en"}
  %head
    %title Adage 
    %meta{:content => "", :name => "description"}/
    %link{:href => "style.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
    / typekit
    %script{:src => "//use.typekit.net/tbz4lac.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}  %body{:id => ""}
    .page_wrap
      .gls_logo_for_ada
      .login_container.floatleft
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = flash[:alert] 
          .field_container
            %div#user_login.floatleft
              = f.label 'Player name' 
            %div.floatright
              = f.text_field :login
          .field_container
            %label#user_password.floatleft
              = f.label :password
            %div.floatright
              = f.password_field :password
          .field_container_remember_me
            %div.floatright= f.submit "Sign in", class: 'sign_in_button'
            - if devise_mapping.rememberable?
              %div#user_remember_me.floatleft.remember_me_checkbox
                = f.check_box :remember_me
                = f.label :remember_me
        
      .sign_up_container
        %a.floatleft{:href => "/users/sign_up"} Sign up
        %a.floatright{:href => "/users/password/new"} Forgot your password?
    / end page wrap
    .footer
    .clear
