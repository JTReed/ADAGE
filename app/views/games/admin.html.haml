%table.table.table-striped
  %thead
    %tr 
      %th game
      %th action
  %tbody
    - @games.each do |game|
      %tr
        %td
          = link_to game do 
            = game.name
        %td
          = link_to 'Edit', edit_game_path(game), class:'btn'

  %br
  = link_to 'Add A Game', new_game_path, class:'btn btn-primary'
